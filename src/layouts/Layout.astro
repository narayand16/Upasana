---
import "../styles/global.css";
import Header from "@/lib/ui/Header.astro";
import Footer from "@/lib/ui/Footer.astro";

export interface Props {
	title?: string;
}

const { title = "Upasana" } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- Preload fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Noto+Sans+Devanagari:wght@400;500;600;700&display=swap"
			rel="stylesheet"
		/>

		<!-- PWA meta tags -->
		<meta name="theme-color" content="#8b5cf6" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="default" />
		<meta name="apple-mobile-web-app-title" content="Upasana" />
		<meta
			name="description"
			content="A digital library of sacred texts for spiritual reading and learning"
		/>

		<!-- Theme setup based on system preferences -->
		<meta name="color-scheme" content="light dark" />
		<script is:inline>
			(function () {
				try {
					var key = "theme-preference";
					var pref = localStorage.getItem(key) || "system";
					var mql = window.matchMedia("(prefers-color-scheme: dark)");
					var isDark =
						pref === "dark" || (pref === "system" && mql.matches);
					var root = document.documentElement;
					root.classList.toggle("dark", isDark);
					root.style.colorScheme = isDark ? "dark" : "light";
				} catch (_) {}
			})();
		</script>
	</head>
	<body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-white">
		<div class="flex flex-col min-h-screen">
			<!-- Header -->
			<Header />

			<!-- Main content -->
			<main class="flex-grow">
				<slot />
			</main>

			<!-- Footer -->
			<Footer />
		</div>
	</body>
</html>
